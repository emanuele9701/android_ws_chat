<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityChatInfo">


    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="163dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cInfo_imageProfilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TableLayout
            android:layout_width="263dp"
            android:layout_height="141dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cInfo_imageProfilo"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/nome_chat" />

                <TextView
                    android:id="@+id/cInfo_nome"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textAlignment="viewStart" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/numero_chat" />

                <TextView
                    android:id="@+id/cInfo_numero"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textAlignment="viewStart" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/hasWhatsApp" />

                <TextView
                    android:id="@+id/cInfo_hasWhatsApp"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textAlignment="viewStart" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/bloccata" />

                <TextView
                    android:id="@+id/cInfo_bloccata"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textAlignment="viewStart" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>